{
  "compileOnSave": false,
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "rootDir": ".",
    "outDir": "./dist",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "esnext",
    "module": "esnext",
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "types": [
      "bun-types",
      "bun"
    ],
    "paths": {
      "@adatag/integri-tree": [
        "./libs/integri-tree/src/index"
      ],
      "@adatag/shared/config": [
        "./libs/deployment-ts/src/config/index"
      ],
      "@adatag/shared/plutus": [
        "./libs/deployment-ts/src/plutus/index"
      ],
      "@adatag/shared/test-utils": [
        "./libs/deployment-ts/test/utils/index"
      ],
      "@adatag/shared/utils": [
        "./libs/deployment-ts/src/utils/index"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tools",
    "contracts"
  ]
}
