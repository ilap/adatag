{
  "compileOnSave": false,
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "rootDir": ".",
    "outDir": "./dist",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "esnext",
    "module": "es2022",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "types": ["bun-types", "bun"],
    "noEmit": true,
    "paths": {
      "@adatag/shared/plutus": ["./libs/adatag-ts/src/plutus/index"],
      "@adatag/shared/utils": ["./libs/adatag-ts/src/utils/index"],
      "@adatag/shared/test-utils": ["./libs/adatag-ts/test/utils/index"],
      "@adatag/shared/config": ["./libs/adatag-ts/src/config/index"],
      "@adatag/integri-tree": ["./libs/integri-tree/src/index"],
      "translucent-cardano": ["./libs/translucent/index"],
    }
  },
  "exclude": ["node_modules", "contracts"]
}
