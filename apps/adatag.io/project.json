{
  "name": "@adatag/adatag.io",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/adatag.io/src",
  "projectType": "application",
  "outputPath": "../../dist/apps/adatag.io/",
  "tags": [],
  "implicitDependencies": [
    "@adatag/deploy",
    "!@adatag/common",
    "!@adatag/integri-tree"
  ],
  "// targets": "to see all targets run: nx show project adatag1.io --web",
  "targets": {
    "build": {
      "dependsOn": [
        "copy-config"
      ],
      "inputs": [
        "production"
      ]
    },
    "serve-static": {
      "dependsOn": [
        "build"
      ],
      "configurations": {
        "custom": {}
      },
      "inputs": [
        "!{projectRoot}/public/genesis-config.json"
      ]
    },
    "serve": {
      "dependsOn": [
        "build"
      ],
      "configurations": {
        "custom": {}
      }
    },
    "preview": {
      "dependsOn": [
        "copy-config"
      ],
      "configurations": {
        "custom": {}
      }
    },
    "copy-config": {
      "executor": "nx:run-commands",
      "tty": true,
      "options": {
        "color": true,
        "cwd": "apps/adatag.io"
      },
      "dependsOn": [
        "^deploy"
      ],
      "cache": true,
      "inputs": [
        "{workspaceRoot}/apps/deploy/**/genesis-config*.json"
      ],
      "configurations": {
        "custom": {
          "command": "echo y | cp -f  ../deploy/config/genesis-config-custom.json  ./public/genesis-config.json"
        },
        "preview": {
          "command": "echo y | cp -f  ../deploy/config/genesis-config-preview.json ./public/genesis-config.json"
        },
        "preprod": {
          "command": "echo y | cp -f  ../deploy/config/genesis-config-preprod.json ./public/genesis-config.json"
        },
        "mainnet": {
          "command": "echo y | cp -f  ../deploy/config/genesis-config-mainnet.json ./public/genesis-config.json"
        },
        "dev": {
          "command": "echo 'No config is saved'"
        }
      },
      "defaultConfiguration": "dev"
    }
  }
}