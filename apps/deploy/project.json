{
  "name": "@adatag/deploy",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/deploy/",
  "projectType": "application",
  "implicitDependencies": ["@adatag/common", "chain"],
  "tags": [],
  "targets": {
    "deploy": {
      "command": "bun run src/cli/deploy.ts",
      "dependsOn": [
        "cors-proxy",
        "^spin-up",
        "^build"
      ],
      "options": {
        "cwd": "apps/deploy"
      },
      "configurations": {
        "dev": {},
        "custom": {},
        "preview": {},
        "preprod": {},
        "mainnet": {}
      },
      "defaultConfiguration": "dev"
    },
    "test": {
      "dependsOn": ["deploy"],
      "executor": "@nx-bun/nx:test",
      "options": {
        "smol": false,
        "bun": true,
        "timeout": 60000,
        "cwd": "apps/deploy"
      },
      "configurations": {
        "dev": {},
        "custom": {},
        "preview": {},
        "preprod": {},
        "mainnet": {}
      },
      "defaultConfiguration": "dev"
    },
     "build": {
      "dependsOn": [
        "deploy"
      ],
      "options": {
        "cwd": "apps/deploy/"
      },
      "inputs": ["{projectRoot}/**/genesis-*"],
      "configurations": {
        "custom":  { "command": "cp -f ./config/genesis-config-custom.json  ../../adatag.io/public/genesis-config.json" },
        "preview": { "command": "cp -f ./config/genesis-config-preview.json ../../adatag.io/public/genesis-config.json" },
        "preprod": { "command": "cp -f ./config/genesis-config-preprod.json ../../adatag.io/public/genesis-config.json" },
        "mainnet": { "command": "cp -f ./config/genesis-config-mainnet.json ../../adatag.io/public/genesis-config.json" },
        "dev": { "command": "echo 'No config is saved'" }
      },
      "defaultConfiguration": "dev"
    }, 
    "cors-proxy": {
      "executor": "nx:run-commands",
      "tty": true,
      "options": {
        "color": true,
        "cwd": "tools",
        "readyWhen": "CORS Proxy server",
        "parallel": true
      },
      "inputs": [],
      "configurations": {
        "custom": {
          "commands": [
            "pkill -f 'corsProxy'; bun run corsProxy.ts"
          ]
        },
        "dev": {
          "command": "echo 'No CORS Proxy server is required'"
        }
      },
      "defaultConfiguration": "dev"
    }

  }
}
