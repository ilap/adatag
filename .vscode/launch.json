{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "bun",
            "internalConsoleOptions": "neverOpen",
            "request": "launch",
            "name": "Int Test Debug File",
            "program": "${file}",
            "args": ["--env-file", ".env.integration", "--timeout", "45000"],
            "cwd": "${workspaceFolder}/libs/adatag-ts",
            "stopOnEntry": true,
            "watchMode": false
        },
        {
            "type": "bun",
            "internalConsoleOptions": "neverOpen",
            "request": "launch",
            "name": "Dev Test Debug File",
            "program": "${file}",
            "args": ["--env-file", "${workspaceFolder}.env", "--timeout", "45000"],
            "cwd": "${workspaceFolder}/apps/adatag-cli",
            "stopOnEntry": true,
            "watchMode": false
        },
        {
            "type": "bun",
            "internalConsoleOptions": "neverOpen",
            "request": "launch",
            "name": "Run File",
            "program": "${file}",
            "cwd": "${workspaceFolder}",
            "noDebug": true,
            "watchMode": false
        },
        {
            "type": "bun",
            "internalConsoleOptions": "neverOpen",
            "request": "attach",
            "name": "Attach Bun",
            "url": "ws://localhost:6499/",
            "stopOnEntry": false
        }
    ]
}