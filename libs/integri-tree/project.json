{
  "name": "integri-tree",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/integri-tree/src",
  "projectType": "library",
  "implicitDependencies": [
    "aiken"
  ],
  "targets": {
    "lint": {
      "dependsOn": [
        "^lint"
      ],
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "test": {
      "executor": "@nx-bun/nx:test",
      "dependsOn": [
        "^build"
      ],
      "options": {
        "smol": false,
        "bail": true,
        "bun": false
      },
      "configurations": {
        "dev": {
          "{options.timeout}": 15000
        },
        "prod": {
          "{options.timeout}": 65000
        }
      },
      "defaultConfiguration": "dev"
    }
  }
}
