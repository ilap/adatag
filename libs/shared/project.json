{
  "name": "shared",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/shared",
  "projectType": "library",
  "implicitDependencies": [
    "aiken",
    "chain"
  ],
  "targets": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "executor": "@nx-bun/nx:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "tsConfig": "libs/shared/tsconfig.lib.json",
        "smol": false,
        "bun": true
      },
      "configurations": {
        "int": {},
        "dev": {},
        "prod": {}
      },
      "defaultConfiguration": "dev"
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ],
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "test": {
      "executor": "nx:run-commands",
      // BUG: bun executor does not allow env variables
      //"executor": "@nx-bun/nx:test",
      "dependsOn": [
        "^build",
        { "projects": "chain", "target": "spin-up", "params": "forward" }
      ],
      "options": {
        "cwd": "libs/shared"
      },
      "configurations": {
        "int": {
          "parallel": false,
          "commands": [
            "bun test --env-file .env.int --timeout 60000",
            "echo INT",
            "pwd",
            "echo \"PARAMS: $NETWORK $ENVIRONMENT $PROVIDER\""
          ]
        },
        "dev": {
          "command": "echo DEV"
        },
        "prd": {
          "command": "echo PRD"
        }
      },
      "defaultConfiguration": "dev"
    }
  }
}