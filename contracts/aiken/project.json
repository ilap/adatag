// See details here:
// https://nx.dev/nx-api/nx/executors/run-commands
// https://nx.dev/reference/project-configuration#targets
// https://github.com/nrwl/nx/blob/master/packages/nx/schemas/project-schema.json
{
  "name": "aiken",
  "version": "0.1.0",
  "root": "contracts/aiken/",
  "projectType": "library",
  "namedInputs": {
    "default": ["{projectRoot}/**/*.ak"]
  },
  "targets": {
    "test": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "cwd": "contracts/aiken"
      },
      "configurations": {
        "dev": {
          "command": "aiken check"
        },
        "prod": {
          "command": "aiken check -D --no-traces"
        }
      },
      "defaultConfiguration": "dev"
    },
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["lint"],
      "options": {
        "cwd": "contracts/aiken"
      },
      "configurations": {
        "dev": {
          "commands": [
            "aiken build -k",
            "cp ../../libs/shared/src/plutus/plutus.ts ../../libs/shared/src/plutus/plutus_orig.ts",
            "bun run ../../tools/chain/scripts/blueprint.ts",
            "bun prettier -w ../../libs/shared/src/plutus/plutus.ts",
            "sed -i '' -e \"2s#^#import { MintRedeemer } from './types'\\n#\" -e \"s/^  rdmr:$/  rdmr: MintRedeemer/\" -e \"14,25d\" ../../libs/shared/src/plutus/plutus.ts"
          ],
          "parallel": false
        },
        "prod": {
          "command": "aiken build -D"
        }
      },
      "defaultConfiguration": "dev"
    },
    "lint": {
      //"dependsOn": ["^build"],
      "options": {
        "cwd": "contracts/aiken"
      },
      "command": "echo 'aiken fmt --check'"
    }
  }
}
